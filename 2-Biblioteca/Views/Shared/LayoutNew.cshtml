<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar con Sidebar</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            transition: transform 0.3s ease-in-out;
            width: 250px;
        }

            .sidebar.collapsed {
                transform: translateX(-100%);
            }

        .main-content {
            margin-left: 250px;
            transition: margin-left 0.3s ease-in-out;
        }

            .main-content.collapsed {
                margin-left: 0;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark p-2">
        <button class="navbar-toggler justify-center" type="button" onclick="toggleSidebar()">
            <span class="navbar-toggler-icon"></span>
        </button>
        <form class="form-inline ml-auto">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar..." aria-label="Buscar">
                <div class="input-group-append">
                    <button class="btn btn-outline-light" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
        <div class="ml-3">
            <a href="#" class="text-light">
                <i class="fas fa-user-circle fa-2x"></i>
            </a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <aside id="sidebar" class="col-md-3 col-lg-2 d-md-block text-primary bg-dark sidebar vh-100 p-3 border-end position-fixed">
                <div class="text-center mb-3">
                    <img src="/logo.png" alt="Logo" class="img-fluid rounded-circle" style="width: 100px; height: 100px;">
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active text-primary fw-bold" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-controller="Rol" asp-action="Index">Roles</a>
                    </li>
                </ul>
            </aside>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
        }
    </script>
</body>
</html>